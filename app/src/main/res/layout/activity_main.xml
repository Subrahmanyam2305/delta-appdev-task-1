<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:gravity="center"
    tools:context="com.example.karthik.deltatask1.MainActivity">

    <Button
        android:id="@+id/red_button"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:onClick="clickRed"
        android:text="Red" />

    <Button
        android:id="@+id/blue_button"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_below="@+id/red_button"
        android:onClick="clickBlue"
        android:text="Blue" />

    <Button
        android:id="@+id/green_button"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_below="@+id/blue_button"
        android:onClick="clickGreen"
        android:text="Green" />


    <Button
        android:id="@+id/save_button"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_below="@+id/green_button"
        android:layout_marginLeft="30dp"
        android:onClick="clickSave"
        android:text="Save" />

    <Button
        android:id="@+id/reset_button"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_below="@+id/save_button"
        android:layout_marginLeft="30dp"
        android:onClick="clickReset"
        android:text="Reset" />

    <TextView
        android:id="@+id/red_textview"
        android:layout_width="80dp"
        android:layout_height="48dp"
        android:layout_toRightOf="@id/red_button"
        android:background="#F44336"
        android:gravity="center"
        android:text="0" />

    <TextView
        android:id="@+id/blue_textview"
        android:layout_width="80dp"
        android:layout_height="48dp"
        android:layout_below="@id/red_textview"
        android:layout_toRightOf="@id/blue_button"
        android:background="#2196F3"
        android:gravity="center"
        android:text="0" />

    <TextView
        android:id="@+id/green_textview"
        android:layout_width="80dp"
        android:layout_height="48dp"
        android:layout_below="@id/blue_textview"
        android:layout_toRightOf="@id/green_button"
        android:background="#4CAF50"
        android:gravity="center"
        android:text="0" />


</RelativeLayout>
